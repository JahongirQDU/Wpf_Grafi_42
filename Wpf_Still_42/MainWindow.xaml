<Window x:Class="Wpf_Still_42.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Still_42"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="Grafik" Grid.Row="0" Background="AliceBlue"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
           <TextBox x:Name="FormulaMatni"  Width="300" Margin="10"/>
            <Button x:Name="Natija" Content="Hisoblash" Margin="10" 
                    Click="Natija_Click"/>
        </StackPanel>
       
    </Grid>
</Window>
